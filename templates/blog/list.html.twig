{% extends 'base.html.twig' %}

{% block title %}
    MyBlog
{% endblock %}

{% block body %}

    <div class="col-xs-3 col-md-3"></div>
    <div class=".col-xs-9 col-md-9">
        {% for post in posts %}
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <div class="caption">
                        <h3>{{ post.heading }}</h3>
                        <p>{{ post.postedAt|date }}</p>
                        <p>{{ post.shorts }}</p>
                        <p>
                            <a href="{{ path('post_show', {'id':post.id}) }}" class="btn btn-default" role="button">
                                 Читати далі...</a>
                        </p>
                        <a href="{{ path('post_show', {'id':post.id}) }}">Количество комментариев <span class="badge">{{ post.comments.count }}</span></a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}