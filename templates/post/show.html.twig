{% extends 'base.html.twig' %}

{% block title %}
    {{ post.heading }}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="col-xs-3 col-md-3"></div>
        <div class=".col-xs-9 col-md-9">
            <h4>Новини</h4>
            <h3>{{ post.heading }}</h3>
            <p>{{ post.postedAt|date }}</p>
            <p>{{ post.description }}</p>
            <p>
                <a href="{{ path('edit_post', {'id':post.id}) }}"
                   class="btn btn-default " role="button">
                    <span class="glyphicon glyphicon-pencil"></span>
                    Редагувати
                </a>
            </p>
            <p>
                <a href="{{ path('homepage') }}" class="btn btn-default" role="button">
                    <span class="glyphicon glyphicon-home"></span> Повернутись на головну</a>
            </p>
        </div>
        <div class="col-xs-3 col-md-3"></div>
        <div class=".col-xs-9 col-md-9">
            <h2 >Нові коментарії</h2>
            <div class=".col-xs-9 col-md-9">
                {% for commentary in post.comments %}
                    <div class="thumbnail">
                        <div class="caption">
                            <h3>{{ commentary.name }}</h3>
                            <p>{{ commentary.postedAt|date }}</p>
                            <p>{{ commentary.message }}</p>
                        </div>
                    </div>
                {% endfor %}
                <p>
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                <p>
                    <a href="{{ '/commentary/{id}' }}">
                        <button type="submit" class="btn btn-default"> Додати новій коментарій </button>
                    </a>
                </p>
                    {{ form_end(form) }}
                </p>

            </div>


        </div>

    </div>
{% endblock %}