{% extends 'base.html.twig' %}

{% block title %}
    MyBlog
{% endblock %}

{% block body %}

    <div class="container">
        <div class="col-xs-3 col-md-3">

        </div>
        <div class=".col-xs-9 col-md-9">
            <p>{{ post.id }}</p>
            <p>{{ post.postedAt|date }}</p>
            <p>{{ post.description }}</p>
            <p>
                <a href= "{{ path('post_show', {'id':post.id}) }}" class="btn btn-info" role="button">Читать далее</a>
            </p>



        </div>
    </div>
{% endblock %}